@model Book
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Book</h1>

<div class="col-md-5">
    <form method="post">
        <div class="form-group">
            <label asp-for="BookName"></label>
            <input asp-for="BookName" class="form-control" />
            <span asp-validation-for="BookName"></span>

        </div>
        <div class="form-group">
            <label asp-for="Author"></label>
            <input asp-for="Author" class="form-control" />
            <span asp-validation-for="Author"></span>

        </div>
        <div class="form-group">
            <label asp-for="ISBN"></label>
            <input asp-for="ISBN" class="form-control" />
            <span asp-validation-for="ISBN"></span>

        </div>
        <div class="form-group">
            <label asp-for="PublishDate"></label>
            <input asp-for="PublishDate" class="form-control" />
            <span asp-validation-for="PublishDate"></span>

        </div>
        <div class="form-group">
            <label asp-for="Genre"></label>
            <select asp-for="Genre" class="form-control">
                <option disabled selected>--Select--</option>
                <option value="Comic">Comic</option>
                <option value="Fantasy">Fantasy</option>
                <option value="Horror">Horror</option>
                <option value="Action">Action</option>
                <option value="Detective">Detective</option>
            </select>
        </div>
        <div class="form-group">
            <button class="btn btn-outline-success">Edit Book</button>
        </div>
    </form>

</div>

