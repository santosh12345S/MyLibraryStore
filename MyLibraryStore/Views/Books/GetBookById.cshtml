@model Book
@{
    ViewData["Title"] = "GetBookById";
}

<h1>Details......</h1>

<div>

<table class="table table-bordered table-striped" >
    <tr>
        <td>Book Name </td>
        <td>@Model.BookName</td>
    </tr>
    <tr>
        <td>Author Name</td>
        <td>@Model.Author</td>
    </tr>
    <tr>
        <td>ISBN</td>
        <td>@Model.ISBN</td>
    </tr>
    <tr>
        <td>Date of Publish</td>
        <td>@Model.PublishDate</td>
    </tr>
    <tr>
        <td>Genre</td>
        <td>@Model.Genre</td>
    </tr>
</table>
    </div>
<div>
    <a asp-action="Index" asp-controller="Books">Back to List</a> |
    <a asp-action="Edit" asp-controller="Books" asp-route-id="@Model.Id" class="btn btn-success"> Edit Book</a> |
    <form asp-action="Delete" asp-controller="Books" asp-route-id="@Model.Id" method="post" style="display:inline-block">
        <br />
        <button formmethod="post" class="btn btn-danger"> Delete Book</button>
    </form>
</div>
